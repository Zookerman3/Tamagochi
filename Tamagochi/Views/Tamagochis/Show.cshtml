<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>My Tomachachis</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
  @using Game.Models;
  <h1>Tamagochi Details: </h1>
  @foreach (Tamagochi tamagochi in Model)
  {

    <h2>@tamagochi.Name</h2>
    <form action="/tamagochis/show/food" method="post">
      <h3>Food Level: @tamagochi.Food <button type="submit" name="foodbutton">Feed Pet</button> </h3> 
      <input type="hidden" name="name" value="@tamagochi.Name">
      <input type="hidden" name="food" value="@tamagochi.Food">
    </form>
    
    <h3></h3>
    <form action="/tamagochis/show/attention" method="post">
      <h3>Attention Level: @tamagochi.Attention <button type="submit" name="attentionbutton">Praise Pet</button> </h3> 
      <input type="hidden" name="name" value="@tamagochi.Name">
      <input type="hidden" name="attention" value="@tamagochi.Attention">
    </form>

    <h3></h3>
    <form action="/tamagochis/show/rest" method="post">
      <h3>Rest Level: @tamagochi.Rest <button type="submit" name="restbutton">Rest Pet</button> </h3> 
      <input type="hidden" name="name" value="@tamagochi.Name">
      <input type="hidden" name="rest" value="@tamagochi.Rest">
    </form>
  }


  <a href='/tamagochis/new'>Add another tamagochi</a>
  <br>
  <br>
  <a href='/tamagochis'>View all tamagochis</a>
</body>

</html>
